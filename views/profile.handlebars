<h2 class="text-dark text-center font-weight-bold mt-3">Hello {{name}}! Here Are Your Blog Posts:</h2>
{{#if blogs}}
{{#each blogs as |blog|}}
<div class="card text-center mt-3 shadow box blog-card">
  <h2 class="mt-3 font-weight-bold">{{title}}</h2>
  <p class="px-3">{{body}}</p>
  <p><small class="text-muted">Posted by: {{../name}} on {{formatDate date_created}}</small></p>
  <div class="blog-functions mb-3 d-flex justify-content-center">
    <button type="click" class="btn btn-primary update-btn mx-1" data-update="{{id}}" data-title="{{title}}" data-body="{{body}}">Update</button>
    <button type="click" class="btn btn-danger delete-btn mx-1" data-delete="{{id}}">Delete</button>
  </div>
</div>
{{/each}}
{{/if}}
<div class="d-flex justify-content-center my-3">
    <button type="click" class="btn btn-dark" id="new-blog-btn" style="display: flex">Create New Post</button>
</div>
{{!-- Form for adding a new blog post --}}
<div class="card p-3" id="new-blog-card" style="display: none">
    <form class="form my-3" id="new-blog-form">
        <div class="mt-3">
            <label for="blog-title" class="form-label">Title of post:</label>
            <input class="form-control" id="blog-title"></input>
        </div>
        <div class="mt-3">
            <label for="blog-body" class="form-label">Content of post:</label>
            <textarea class="form-control" id="blog-body" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-dark mt-3" id="blog-submit-btn">Submit</button>
    </form>
</div>
{{!-- For for updating an existing blog post --}}
<div class="card p-3" id="update-blog-card" style="display: none">
    <form class="form my-3" id="update-blog-form">
        <div class="mt-3">
            <label for="blog-title" class="form-label">Title of post:</label>
            <input class="form-control" id="updated-title"></input>
        </div>
        <div class="mt-3">
            <label for="blog-body" class="form-label">Content of post:</label>
            <textarea class="form-control" id="updated-body" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-dark mt-3" id="blog-update-btn">Submit</button>
    </form>
</div>

<script src="/js/profile.js"></script>
