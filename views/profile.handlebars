
<h2 class="text-dark text-center font-weight-bold mt-3">Hello {{name}}! Here Are Your Blog Posts:</h2>
{{#if blogs}}
{{#each blogs as |blog|}}
<div class="card text-center mt-3 shadow box" id="blog-card" data-id="{{id}}">
  <h2 class="text-dark mt-3 font-weight-bold">{{title}}</h2>
  <p class="px-3">{{body}}</p>
  <p><small class="text-muted">Posted by: {{../name}} on {{formatDate date_created}}</small></p>
</div>
{{/each}}
{{/if}}
<div class="d-flex justify-content-center my-3">
    <button type="click" class="btn btn-dark" id="new-blog-btn" style="display: flex">Create New Post</button>
</div>
<div class="card p-3" id="new-blog-card" style="display: none">
    <form class="form my-3" id="new-blog-form">
        <div class="mt-3">
            <label for="blog-title" class="form-label">Title of post:</label>
            <input class="form-control" id="blog-title"></input>
        </div>
        <div class="mt-3">
            <label for="blog-body" class="form-label">Content of post:</label>
            <textarea class="form-control" id="blog-body" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-dark new-comment mt-3" id="blog-submit-btn">Submit</button>
    </form>
</div>

<script src="/js/profile.js"></script>